@model EVENTOS.Models.Ciudad

@{
    ViewBag.Title = "Edit";
}

<div class="Fondo8">
    <br /><br>
    <h1 class="text-center">Modificacion de Nombre de la Ciudad</h1>
    <hr class="uno"/>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <br />
    <h4><b>Ingresa el nuevo nombre de la ciudad deseada.</b></h4>
    <hr class="tres" />
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="Campo">
        <div class="form-group">
            <label class="col-md-12">Ciudad</label>
            <div class="Campo row-cols-lg-8">
                @Html.EditorFor(model => model.NombreCiudad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreCiudad, "", new { @class = "text-danger text-lg" })
            </div>
        </div>
    </div>

    <br /><br /><br /><br /><br />
    <div class="btnSave">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class=" btn btn-lg btn-success" />
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-lg btn-outline-warning" })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
