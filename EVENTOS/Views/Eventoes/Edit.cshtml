@model EVENTOS.Models.Evento

@{
    ViewBag.Title = "Editar Evento";
}
<div class="Fondo6">
    <br /><br />
    <h1 class="T6 text-center">Modificar datos del Evento</h1>
    <hr class="uno" />
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label class="col-md-2">Evento</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NombreEvento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreEvento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2">Categoria</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CategoriaEvento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoriaEvento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2">Fecha</label>
                <div class="col-md-12">
                    <input type="date" name="DateEvento" value="" class="form-control" />
                </div>
            </div>


            <!--FORANEA CIUDAD-->
            <div class="form-group">
                <label class="control-label col-md-2">Ciudad:</label>
                <div class="col-md-12">
                    <select name="CityID" class="form-control">
                        <option>Elige una Ciudad:</option>
                        @foreach (var item in ViewBag.Ciudades)
                        {
                            <option value="@item.Id">@item.NombreCiudad</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2">Ubicacion</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.LugarEvento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LugarEvento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2">Hora</label>
                <div class="col-lg-12">
                    <input type="time" name="Hora" value="" class="col-lg-12 form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2">Capacidad</label>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.CapacidadEvento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CapacidadEvento, "", new { @class = "text-danger" })
                </div>
            </div>


        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar Cambios" class="btnEditar btn btn-lg btn-success" />
        </div>
    </div>
  
}

<div>
    @Html.ActionLink("Volver a Eventos", "Index", null, new { @class = "botonVolver2 btn btn-lg btn-outline-warning" })
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
