@model IEnumerable<EVENTOS.Models.Evento>

@{
    ViewBag.Title = "Index";
}

<div class="Fondo2">
    <br /><br />
<h1 class="Titulo2">Proximos Eventos Registrados</h1>
    <hr class="uno"/>

</div>
<p class="botonCrearE">
    <br />
    @Html.ActionLink("Agregar un Evento","Create",null , new { @class="btn btn-lg btn-outline-dark"})
    <br />
</p>


<div class="tablaancho3">
  <table class="table">
    <tr>
        <th>
            Evento
        </th>
        <th>
            Categoria
        </th>
        <th>
            Fecha
        </th>
        <th>
            Lugar
        </th>
        <th>
            Hora
        </th>
        <th>
            Capacidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreEvento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaEvento)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.FechaEvento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LugarEvento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraEvento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CapacidadEvento)
        </td>
      
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new {@class="opciones3 btn btn-sm btn-outline-light" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }, new {@class="btn btn-sm btn-outline-light" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new {@class="btn btn-sm btn-outline-light" })
        </td>
      
    </tr>
}

</table>
    </div>
